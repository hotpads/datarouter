	<build>
		<sourceDirectory>${project.basedir}/src/</sourceDirectory>
		<outputDirectory>${project.basedir}/target/classes/</outputDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<buildOutputDirectory>${project.basedir}/target/classes
					</buildOutputDirectory>
					<additionalProjectFacets>
						<jst.java>1.7</jst.java>
					</additionalProjectFacets>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<!-- Is needed to copy all the shared jsp, js and css for all the project -->
					<execution>
						<id>copy-resources-META-INF</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes/META-INF/resources/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src/META-INF/resources/
									</directory>
									<filtering>false</filtering>
									<includes>
										<include>**/*</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<!-- Is needed to copy the configuration to the root of datarouter jar -->
					<execution>
						<id>copy-resources-datarouter</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/classes/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src/</directory>
									<filtering>false</filtering>
									<includes>
										<include>hib-default.cfg.xml</include>
										<include>log4j.properties</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<executions>
					<execution>
						<configuration>
							<compilerId>eclipse</compilerId>
							<optimize>true</optimize>
							<source>1.7</source>
							<target>1.7</target>
							<phase>compile</phase>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.codehaus.plexus</groupId>
						<artifactId>plexus-compiler-eclipse</artifactId>
						<version>2.2</version>
						<scope>runtime</scope>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>unit-test-with-ant</id>
						<phase>test</phase>
						<configuration>
							<skip>${skipTests}</skip>
							<target>
								<property name="test_classpath" refid="maven.test.classpath" />
								<taskdef name="junit"
									classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
									<classpath path="${test_classpath}" />
								</taskdef>
								<junit haltonerror="true" haltonfailure="true"
									printsummary="true" includeantruntime="false">
									<classpath>
										<pathelement path="${test_classpath}" />
									</classpath>
									<batchtest todir="${project.build.directory}/test-results">
										<fileset dir="${project.build.directory}/classes"
											includes="**/*Tests.class" excludes="**/*IntegrationTests.class" />
									</batchtest>
								</junit>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
